<%-include('../include/_adminhead')%>

    <!-- Products -->

    <section>
        <div class="container">
            <div class="row mt-4">
                <a href="/add-brand" class="btn btn-success ml-auto proadd">Add Brand</a>
            </div>
            <table class="table mt-4">
                <thead>
                    <tr>
                        <th scope="col">No.</th>
                        <th scope="col">Name</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                
                <tbody>
                    <% for ( let i = 0; i < brand.length; i++){ %>
                    <tr>
                        <th scope="row"><%=i+1%></th>
                        <td><%=brand[i].name%></td>
                        <td>
                            <a href="/update-brand?id=<%= brand[i]._id %>" class="btn border-shadow update">
                                <i class="fa-solid fa-pencil"></i>
                            </a>
                            <div>
                            <form action="/delete-brand/<%= brand[i]._id %>?_method=DELETE" method="post">
                                <a href="" onclick="return confirm('Are want to delete <%=brand[i].name%> ?')">
                                <button class="btn border-shadow update" type="submit">
                                    <i class="fa-solid fa-trash-can"></i>
                                </button>
                                </a>
                            </form>
                            </div>
                        </td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </section>

    <!-- /Products -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
        integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
        integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF"
        crossorigin="anonymous"></script>
</body>

</html>