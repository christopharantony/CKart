<%-include('../include/_adminhead')%>

<section>
    <div class="container" style="color:white;">
        <br>
        <table class="table mt-5" id="myTable" style="padding-top: 2.5rem;">
            <thead class="thead">
                <tr>
                    <th scope="col">Sl.</th>
                    <th scope="col">Name</th>
                    <th scope="col">Coupon-Code</th>
                    <th scope="col">Discounted Price</th>
                    <th scope="col">Date</th>
                </tr>
            </thead>
            
            <tbody>
                <% for ( let i = 0; i < couponUsed.length; i++){ %>
                <tr>
                    <th scope="row"><%=i+1%></th>
                    <td><%=couponUsed[i].user.name%></td>
                    <td><%=couponUsed[i].coupon.Code%></td>
                    <td style="padding-left:3rem">$ <%=parseInt(couponUsed[i].discount)%></td>
                    <td><%=couponUsed[i].date%></td>
                </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</section>
<script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/buttons/2.2.2/js/dataTables.buttons.min.js"></script>
