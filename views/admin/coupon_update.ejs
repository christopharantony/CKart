<%-include('../include/_adminhead')%>
    <!--Main-->
    <section>
        <div class="container mt-4">
            <div class="row">
                <div class="col-md-6">
                    <h2 class="text-center">Edit Coupon</h2>
                    <p class="wrong" style="color: red"> <%=error%> </p>
                    <form action="/coupon-update/<%=coupon._id%>?_method=PUT" method="post">
                        <label for="">Coupon-Code</label>
                        <input type="text" name="Code" value="<%=coupon.Code%>" placeholder="COUPON CODE" class="form-control">
                        <label for="">Percentage</label>
                        <input type="number" name="percentage" value="<%=coupon.percentage%>" placeholder="0" class="form-control">
                        <label for="">Minimum Price</label>
                        <input type="number" name="min" value="<%=coupon.min%>" placeholder="0" class="form-control">
                        <label for="">From</label>
                        <input type="date" name="fromDate" value="<%=coupon.fromDate.toISOString().split('T')[0]%>"
                            class="form-control">
                        <label for="">To</label>
                        <input type="date" name="toDate" value="<%=coupon.toDate.toISOString().split('T')[0]%>"
                            class="form-control">
                        <button type="submit" class="btn btn-success mt-4">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </section>
    <!--/Main-->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
        integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
        integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF"
        crossorigin="anonymous"></script>
    </body>
    </html>