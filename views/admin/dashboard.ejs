<!----------------------------------------------------------------------------------------->
<div style="background: #ffd1e1;display: flex;justify-content: space-around; padding-top:1rem">
<div class="btn btn-light" style="background: #ebe0ff;padding: 3rem;width: 20%;border-radius: 5rem;text-align: center;">Total Users <br> <%=usercount %> </div>
<div class="btn btn-light" style="background: #ebe0ff;padding: 3rem;width: 20%;border-radius: 5rem;text-align: center;">Total Products <br> <%=productcount %></div>
<div class="btn btn-light" style="background: #ebe0ff;padding: 3rem;width: 20%;border-radius: 5rem;text-align: center;">Total Orders <br> <%=ordercount %></div>
</div>
        <div class="chartCard">
        <div class="chartBox">
            <canvas id="myChart"></canvas>
            <button class=" ms-2 btn btn-light" onclick="timeFrame(this)" value="day">Day</button>
            <button  class="btn btn-light" onclick="timeFrame(this)" value="week">Week</button>
            <button class="btn btn-light" onclick="timeFrame(this)" value="month">Month</button>
        </div>
    </div>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        function adminLogout() {
            Swal.fire({
                title: 'Are you want to logout?',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Logout'
            }).then((result) => {
                if (result.isConfirmed) {
                    location.href = "/logout_admin";
                }
            })
        }
        // setup 
        const data = {
            labels: ['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun'],
            datasets: [{
                label: 'Weekly Sales',
                data: [18, 12, 6, 9, 12, 3, 9],
                backgroundColor: [
                    'rgba(255, 26, 104, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(153, 102, 255, 0.2)',
                    'rgba(255, 159, 64, 0.2)',
                    'rgba(0, 0, 0, 0.2)'
                ],
                borderColor: [
                    'rgba(255, 26, 104, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)',
                    'rgba(0, 0, 0, 1)'
                ],
                borderWidth: 1
            }]
        };

        // config 
        const config = {
            type: 'bar',
            data,
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        };

        // render init block
        const myChart = new Chart(
            document.getElementById('myChart'),
            config
        );
    </script>

</body>

</html>