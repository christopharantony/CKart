<%-include('../include/_adminhead')%>
    <section>
        <div class="container" style="color:white;">
            <div class="row mt-4">
                <a href="/admin/offer-add" class="btn btn-success ml-auto proadd">Add Offer</a>
            </div>
            <table class="table mt-4">
                <thead>
                    <tr>
                        <th scope="col">Sl.</th>
                        <th scope="col">Product</th>
                        <th scope="col">From</th>
                        <th scope="col">To</th>
                        <th scope="col">Percentage</th>
                        <th scope="col">Status</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>

                <tbody>
                    <% for ( let i=0; i < offer.length; i++){ %>
                        <tr>
                            <th scope="row">
                                <%=i+1%>
                            </th>
                            <td>
                                <%=offer[i].product[0].Name%>
                            </td>offer
                            <td>
                                <%=offer[i].fromDate.toDateString()%>
                            </td>
                            <td>
                                <%=offer[i].toDate.toDateString()%>
                            </td>
                            <td>
                                <%=offer[i].percentage%>
                            </td>
                            <% if (offer[i].status) { %>
                                <form action="/admin/offer-status/<%= offer[i]._id %>?_method=PATCH" method="post">
                                    <td><button class="btn btn-outline-success" type="submit">Enabled</button></td>
                                </form>
                                <% } else { %>
                                    <form action="/admin/offer-status/<%= offer[i]._id %>?_method=PATCH" method="post">
                                        <td><button class="btn btn-outline-danger" type="submit">Disabled</button></td>
                                    </form>
                                    <% } %>
                                        <td>
                                            <a href="/admin/offer-update/<%= offer[i]._id %>"
                                                class="btn border-shadow update">
                                                <i class="fa-solid fa-pencil"></i>
                                            </a>
                                            <div>
                                                <button onclick="deleteOffer('<%=offer[i]._id %>')"
                                                    class="btn border-shadow update">
                                                    <i class="fa-solid fa-trash-can"></i>
                                                </button>
                                            </div>
                                        </td>
                        </tr>
                        <% } %>
                </tbody>
            </table>
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
        integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
        integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF"
        crossorigin="anonymous"></script>
    </body>

    </html>