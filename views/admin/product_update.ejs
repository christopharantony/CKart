<%-include('../include/_adminhead')%>


    <!--Main-->

    <section>
        <div class="container mt-4">
            <div class="row">
                <div class="col-md-6">
                    <h2 class="text-center">Edit Product</h2>
                    <form action="/update/<%=product._id%>?_method=PUT" method="post" enctype="multipart/form-data">
                        <input type="hidden" name="id" value="<%= product._id%>">
                        <label for="">Name</label>
                        <input type="text" name="Name" value="<%=product.Name%>" class="form-control">

                        <label for="">Price</label>
                        <input type="number" name="Price" value="<%=product.Price%>" class="form-control">

                        <label for="">Quantity</label>
                        <input type="number" name="Quantity" value="<%=product.Quantity%>" class="form-control">

                        <label for="">Description</label>
                        <input type="text" name="Description" value="<%=product.Description%>" class="form-control">

                        <label for="">Image</label>
                        <br>
                        <img style="width:70px;height:70px" src="<%=product.Image%>" alt="product image" id="imgView" >
                        <br><br>
                        <input type="file" name="Image" value="<%=product.Image%>" class="form-control" onchange="viewImage(event)">
                        <br>
                        <div class="m-2">
                            <label for="brandOptions" class="form-label">Brand :</label>
                            <select id="brandOptions" name="Brand">
                        <% for ( let i = 0; i < brand.length; i++){ %>
                        <option value="<%=brand[i].name%>" <%= product.Brand == brand[i].name?'selected':'' %>><%=brand[i].name%></option>
                        <% } %>
                            </select>
                        </div>
                        <div class="m-2">
                        <label for="categoryOptions" class="form-label">Category :</label>
                        <select value="" id="categoryOptions" name="Category">
                        <label for="">Category</label><br>
                        <% for ( let i = 0; i < cate.length; i++){ %>
                        <option value="<%=cate[i].name%>"<%= product.Category == cate[i].name?'selected':'' %>><%=cate[i].name%></option>
                        <% } %>
                        </select>
                        </div>

                        <br><button type="submit" class="btn btn-success mt-4">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <!--/Main-->
    <script>
        console.log('Product_Update : ',event);
        function viewImage(event){
            document.getElementById('imgView').src=URL.createObjectURL(event.target.files[0])
        }
    </script>


    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
        integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
        integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF"
        crossorigin="anonymous"></script>
    </body>

    </html>