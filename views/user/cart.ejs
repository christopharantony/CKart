<!DOCTYPE html>

<html>

<head>

    <title> CKart</title>

    <link rel="stylesheet" type="text/css" href="css/cart.css">

    <link rel="stylesheet" type="text/css"
        href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- Swal -->
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="sweetalert2.all.min.js"></script>
    <link rel="stylesheet" href="sweetalert2.min.css">
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.1.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
</head>

<body>

    <nav class=" navbar-light bg-light"
        style="background-color: #4843a3;height: 4em; color: white; padding-left: 42em;">
        <a href="/" style="    float: left;
        margin-left: -38em;
        margin-top: 1em;
        color: white;">Home</a>
        <a class="navbar-brand" href="/" style="font-size: x-large; font-weight: bold; color: white;">CKart</a>
    </nav>

    <div class="container">

        <h1> Cart</h1>

        <div class="cart">

            <div class="products">
                <% if (cartItems.length==0) { %>
                    <h2>Cart is Empty</h2>
                    <% } else { %>
                        <% for ( let i=0; i < cartItems.length; i++) { %>
                            <div class="product">
                                <a href="/productDetail?image=<%=cartItems[i]?.product.Image %>">
                                    <img style="width: 250px;padding: 35px;padding-top: 46px;"
                                        src="<%= cartItems[i].product.Image[0] %>">
                                </a>
                                <div class="product-info">

                                    <h3 class="product-name">
                                        <%= cartItems[i].product.Name %>
                                    </h3>

                                    <h4 class="product-price">$ <%= cartItems[i].product.Price %>
                                    </h4>

                                    <h4 class="product-offer">
                                        <%= cartItems[i].product.Description %>
                                    </h4>


                                    <p class="product-quantity">Qnt:

                                    <div class="input-group" style="width:auto; display:flex">
                                        <button style="height:3rem ; width:3rem;"
                                            onclick="changeQuantity('<%=cartItems[i]._id%>' , '<%=cartItems[i].product._id%>', '<%=user._id%>' , -1)">-</button>
                                        <p id="<%=cartItems[i].product._id%>"
                                            style="display: flex; padding-top:0.4rem; margin: 0px 1rem">
                                            <%=cartItems[i].quantity%>
                                        </p>
                                        <button style="height:3rem ; width:3rem; "
                                            onclick="changeQuantity('<%=cartItems[i]._id%>' , '<%=cartItems[i].product._id%>', '<%=user._id%>' , 1)">+</button>
                                    </div>

                                    <button class="product-remove"
                                        onclick="removeProcart('<%=cartItems[i]._id%>' , '<%=cartItems[i].product._id%>')">

                                        <i class="fa fa-trash" aria-hidden="true"></i>

                                        <span class="remove">Remove</span>

                                    </button>

                                </div>

                            </div>

                            <% } %>


            </div>
            <% if (totalOffer) { %>
                <div class="cart-total">

                    <p>

                        <span>Price</span>

                        <span>$ <span id="total">
                                <%=totalValue%>
                            </span> </span>

                    </p>

                    <p>

                        <span>Number of Items</span>

                        <span id="totalNo">
                            <%=totalNo%>
                        </span>

                    </p>

                    <p>

                        <span>You Save</span>
                        <span>$ <%=totalOffer%></span>

                    </p>
                    <p>

                        <span>Total Price</span>

                        <span>$ <span id="total">
                                <%=save%>
                            </span> </span>

                    </p>

                    <a href="/place-order">Proceed to Checkout</a>

                </div>
                <% } else { %>
                    <div class="cart-total">

                        <p>
                            <span>Price</span>
                            <span>$ <span id="total">
                                    <%=totalValue%>
                                </span> </span>
                        </p>

                        <p>

                            <span>Number of Items</span>

                            <span id="totalNo">
                                <%=totalNo%>
                            </span>

                        </p>

                        <p>

                            <span>You Save</span>
                            <span>$ 0</span>

                        </p>
                        <p>

                            <span>Total Price</span>

                            <span>$ <span id="total">
                                    <%=totalValue%>
                                </span> </span>

                        </p>

                        <a href="/place-order">Proceed to Checkout</a>

                    </div>
                    <% } %>

        </div>

    </div>
    <% } %>

</body>
<script>
    function changeQuantity(cartId, proId, userId, count) {
        let quantity = parseInt(document.getElementById(proId).innerHTML)
        count = parseInt(count)
        $.ajax({
            type: 'POST',
            url: '/change-product-quantity',
            data: {
                user: userId,
                cart: cartId,
                product: proId,
                count: count,
                quantity: quantity
            },
            dataType: 'json',
            success: (response) => {
                if ($.trim(response.removeProduct)) {
                    const Toast = Swal.mixin({
                        toast: true,
                        position: 'top-end',
                        showConfirmButton: false,
                        timer: 3000,
                        timerProgressBar: true,
                        didOpen: (toast) => {
                            toast.addEventListener('mouseenter', Swal.stopTimer)
                            toast.addEventListener('mouseleave', Swal.resumeTimer)
                        }
                    })
                    setTimeout(() => {
                        location.reload()
                    }, 1500)
                    Toast.fire({
                        icon: 'success',
                        title: 'Removed from cart'
                    })
                } else {
                    document.getElementById(proId).innerHTML = quantity + count
                    document.getElementById("total").innerHTML = response.total
                    location.reload()
                }
            },
            error: (err) => {
                alert(err)
            }
        })
    }

    function removeProcart(cartId, proId) {
        Swal.fire({
            title: 'Are you want to Remove?',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Remove'
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    type: 'POST',
                    url: '/remove-product-cart',
                    data: {
                        cart: cartId,
                        product: proId
                    },
                    dataType: 'json',
                    success: (response) => {
                        location.reload()
                    }
                })
            }
        })
    }

</script>

</html>