    } -->


</body>
<script>
    function removeProfav(cartId, proId) {
        Swal.fire({
            title: 'Are you want to Remove?',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Remove'
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    type: 'POST',
                    url: '/remove-product-fav',
                    data: {
                        cart: cartId,
                        product: proId
                    },
                    dataType: 'json',
                    success: (response) => {
                        location.reload()
                    }
                })
            }
        })
    }
